<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jackandphantom.carouselrecyclerview.view.ReflectionViewContainer
        android:id="@+id/reflectionViewContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="42dp"
        android:background="@drawable/style_card_shape"
        app:layout_constraintBottom_toTopOf="@+id/textViewTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewMovie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

    </com.jackandphantom.carouselrecyclerview.view.ReflectionViewContainer>


    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp"
        android:text="@string/popular_movies"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/reflectionViewContainer"
        app:layout_constraintStart_toStartOf="@+id/reflectionViewContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>